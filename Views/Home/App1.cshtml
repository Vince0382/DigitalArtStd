@{
    ViewData["Title"] = "Departure Time Calculator";
}

    <div id="focusedApp1" style="width:100%">
        <div class="text-center flWhite" style="padding:20px;">
            <h1 style="font-weight:200">For a better life and work balance management</h1>
            <img src="~/images/iPhone_DepartureTime.png" />
        </div>
        <div class="text-center flWhite" style="padding:20px;">
            <h2>Cross Platform Compatibility</h2>
            <div class="row justify-content-around" style="display:inline-flex">
                <div class="col-4 text-center"><img style="max-width:20vw" src="~/images/xamarin.png"></div>
                <div class="col-4 text-center"><img style="max-width:20vw" src="~/images/android.png" /></div>
                <div class="col-4 text-center"><img style="max-width:20vw" src="~/images/apple.png" /></div>
            </div>
        </div>
        <div class="text-center flGrey">
            <div class="row" style="padding:20px">
                <div style="color:white !important;" class="col-3">Created to help workers to better manage their life and work balance, especialy when they have to deal with a clocking system</div>
                <div style="color:white !important;" class="col-3">Set your arrival time, the working time you have to do, your lunch break duration and that's it !</div>
                <div style="color:white !important;" class="col-3">Tap the departure time calculated at the botton and the application will automaticaly put a notification to remember you when you can go home</div>
                <div style="color:white !important;" class="col-3">Languages available : English - French</div>
            </div>
            <div id="carouselSnpApp1" class="carousel slide text-center" data-ride="carousel" data-interval="3000" style="max-width:50vw;margin:auto;">
                <ol class="carousel-indicators">
                    <li data-target="#carouselSnpApp1" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselSnpApp1" data-slide-to="1"></li>
                    <li data-target="#carouselSnpApp1" data-slide-to="2"></li>
                    <li data-target="#carouselSnpApp1" data-slide-to="3"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img id="img1" class="customSnapschotImage" src="~/images/departuretime_1.png">
                    </div>
                    <div class="carousel-item">
                        <img id="img2" class="customSnapschotImage" src="~/images/departuretime_2.png" />
                    </div>
                    <div class="carousel-item">
                        <img id="img3" class="customSnapschotImage" src="~/images/departuretime_3.png" />
                    </div>
                    <div class="carousel-item">
                        <img id="img4" class="customSnapschotImage" src="~/images/departuretime_4.png" />
                    </div>
                </div>
                <a style="z-index:700" class="carousel-control-prev" href="#carouselSnpApp1" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a style="z-index:700" class="carousel-control-next" href="#carouselSnpApp1" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>              

